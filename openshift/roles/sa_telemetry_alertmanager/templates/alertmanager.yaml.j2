apiVersion: monitoring.coreos.com/v1
kind: Alertmanager
metadata:
  name: sa
spec:
  securityContext:
    nonroot: true
  nodeSelector:
    application: sa-telemetry
  podAntiAffinity: hard
  replicas: 3
  version: v{{ sa_telemetry_alertmanager_image_version }}
  podMetadata:
    labels:
      sa-app: alertmanager
