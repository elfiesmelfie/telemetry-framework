apiVersion: apps.openshift.io/v1
kind: DeploymentConfig
metadata:
  name: qdr-{{ node_label.name }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: qdr
        version: v1
        type: router
        node: {{ node_label.name }}
    spec:
      containers:
      - name: qdr-{{ node_label.name }}
        image: nfvpe/qpid-dispatch-router:1.2.0-2
        imagePullPolicy: IfNotPresent
        ports:
        - name: internal
          containerPort: 5672
          protocol: TCP
        - name: external
          containerPort: 20001
          protocol: TCP
        volumeMounts:
        - name: qdrouterd-config
          mountPath: /etc/qpid-dispatch
      volumes:
      - name: qdrouterd-config
        configMap:
          name: qdrouterd-config-{{ node_label.name }}
      nodeSelector:
        node: {{ node_label.name }}
